<!DOCTYPE html>
<html lang="pt-br">
<%- include('./partials/head.ejs') %>
<body>

<%- include('./partials/navbar.ejs') %>

<div>
    <% estabelecimento.forEach(estabelecimento => { %>
        <h5 class="listel-add">Listel | Profile/ <%= estabelecimento.id %> </h5>
        <div class="estabelecimento">
            <div class="row">
                <div class="col-1">
                    <div class="div-img-3">
                        <i class="fa fa-user fa-3x" id="img" aria-hidden="true"></i>
                    </div>
                </div>
                <div class="col-3">
                    <div class="col">
                        <h5 class="descricao"><%= estabelecimento.nome_fantasia %></h5>
                        <h6>Tel: <%= estabelecimento.telefone %></h6>
                        <h6>Cel: <%= estabelecimento.telefone %> <i class="fa fa-whatsapp fa-lg" aria-hidden="true"></i></h6>
                        <h6 class="tags"><%= estabelecimento.tags %></h6>
                    </div>
                </div>
                <div class="col-3">
                    <div class="col">
                        <h5 class="descricao">Mídias</h5>
                        <h6><a href="https://<%= estabelecimento.instagram %>"><i class="fa fa-instagram fa-lg" aria-hidden="true"></i> <%= estabelecimento.instagram %></a></h6>
                        <h6><a href="https://<%= estabelecimento.facebook %>"><i class="fa fa-facebook-square fa-lg" aria-hidden="true"></i> <%= estabelecimento.facebook %></a></h6>
                        <h6><a href="https://<%= estabelecimento.twitter %>"><i class="fa fa-twitter fa-lg" aria-hidden="true"></i> <%= estabelecimento.twitter %></a></h6>
                        <h6><a href="https://<%= estabelecimento.youtube %>"><i class="fa fa-youtube fa-lg" aria-hidden="true"></i> <%= estabelecimento.youtube %></a></h6>
                        
                    </div>
                </div>
                <div class="col-3">
                    <div class="col">
                        <h5 class="descricao">Endereço</h5>
                        <h6><%= estabelecimento.rua %>, <%= estabelecimento.numero %></h6>
                        <h6><%= estabelecimento.bairro %></h6>
                        <h6><%= estabelecimento.cidade %> - <%= estabelecimento.estado %></h6>
                        <h6><%= estabelecimento.cep %></h6>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-add" id="feedback">
            <h5 class="descricao-form">Feedback</h5>
        </div>
        <h5 class="listel-add" id="criticas">Críticas, Sugestões e Observações:</h5>
        <form action="/salvar-feedback" method="POST">
            <div class="form-add" id="textarea-feedback">
                <textarea class="form-control" name="feedback" placeholder="Fala que eu te escuto..." rows="7"></textarea>
            </div>
            <div class="submit" id="submit-feedback">
                <a href="/">
                    <button type="button" class="btn btn-secondary">Voltar</button>
                </a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </form>
        <div class="form-add" id="depoimentos">
            <h5 class="descricao-form" id="h5-depoimentos">Depoimentos</h5>
        </div>
    <% }); %> 
</div>

<nav class="navbar navbar-light bg-white" id="footer">
    <span>ListelApp <i class="fa fa-copyright" aria-hidden="true"></i> 2021 | IELUSC - Tecnólogo em Sistemas para Internet by Lucas Leoni</span>
</nav>

<%- include('./partials/footer.ejs') %>
</body>
</html>